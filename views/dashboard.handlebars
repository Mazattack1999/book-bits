<section>
    <h2>Submit New Review</h2>

    <form class="new-review-form">
        <div>
            <label for="review-title">Title</label>
            <input type="text" id="review-title" name="review-title" />
        </div>
        <div>
            <label for="review">Review</label>
            <textarea id="review" name="review"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if reviews.length}}
<section>
    <h2> Your Reviews</h2>
    <ol>
        {{#each reviews as |review|}}
        <li>
            {{> card review}}
            <a href="/dashboard/edit/{{review.id}}" class="edit-link">Edit review</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-review.js"></script>